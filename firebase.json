{
  "functions": {
    "source": "functions"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json",
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    },
    "hosting": {
      "port": 5000
    }
  },
  "hosting": [
    {
      "public": "dist",
      "target": "prod",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    }
  ]
}
